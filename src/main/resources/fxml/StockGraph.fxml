<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../styles/Graph.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kaushiksitaraman.StockTracker.StockGraph_Controller">
   <children>
      <Pane fx:id="pane1" prefHeight="429.0" prefWidth="627.0" stylesheets="@../styles/Graph.css">
         <children>
            <ComboBox fx:id="cmbbox_list" disable="true" editable="true" layoutX="168.0" layoutY="72.0" prefHeight="26.0" prefWidth="304.0" promptText="Select BSE or NSE" />
            <RadioButton fx:id="rdbtn_BSE" layoutX="222.0" layoutY="33.0" mnemonicParsing="false" onAction="#Select_Bse" text="BSE" />
            <RadioButton fx:id="rdbtn_NSE" layoutX="376.0" layoutY="33.0" mnemonicParsing="false" onAction="#Select_Nse" text="NSE" />
            <ComboBox fx:id="cmbbox_range" layoutX="116.0" layoutY="122.0" prefWidth="150.0" />
            <ComboBox fx:id="cmbbox_interval" layoutX="403.0" layoutY="122.0" prefWidth="150.0" />
            <Label fx:id="lbl_range" alignment="CENTER" contentDisplay="CENTER" layoutX="46.0" layoutY="127.0" prefHeight="16.0" prefWidth="58.0" text="Range:" />
            <Label fx:id="lbl_interval" alignment="CENTER" contentDisplay="CENTER" layoutX="343.0" layoutY="127.0" prefHeight="16.0" prefWidth="58.0" text="Interval:" />
            <ScrollPane fx:id="Scroll" layoutX="1.0" layoutY="122.0" maxWidth="2000.0" prefHeight="243.0" prefWidth="627.0" visible="false">
               <content>
                  <AreaChart fx:id="StockChart" prefHeight="220.0" prefWidth="627.0">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </AreaChart>
               </content>
            </ScrollPane>
            <Button fx:id="btn_ok" layoutX="178.0" layoutY="377.0" mnemonicParsing="false" onAction="#ok" text="Get Graph">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font></Button>
            <Button fx:id="btn_reset" layoutX="372.0" layoutY="377.0" mnemonicParsing="false" onAction="#reset" text="Reset">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font></Button>
         </children></Pane>
   </children>
</AnchorPane>
